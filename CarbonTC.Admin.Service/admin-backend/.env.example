# Server Configuration
PORT=5005
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/admin_service
MONGODB_TEST_URI=mongodb://localhost:27017/admin_service_test

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672

# JWT Configuration (để verify token từ Auth Service)
JWT_SECRET=your_jwt_secret_key_here
JWT_PUBLIC_KEY=your_jwt_public_key_here

# Other Services URLs
AUTH_SERVICE_URL=http://localhost:5001
MARKETPLACE_SERVICE_URL=http://localhost:5003
PAYMENT_SERVICE_URL=http://localhost:5004

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100